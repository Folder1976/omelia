  e.preventDefault;

  $('#name').removeClass('error');
  $('#phone').removeClass('error');
  if ( $('#name').val()=='' ) {
    $('#name').addClass('error');
  }
  if ( $('#phone').val()=='' ) {
    $('#phone').addClass('error');
  }

  if ( $('#name').val()=='' || $('#phone').val()=='' ) {
    return;
  }

  activeStep2();
});

