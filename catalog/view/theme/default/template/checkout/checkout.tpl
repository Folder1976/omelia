// вкладки "Доставка" и "Оплата"
$('.step-tabs').on('click', 'a', function(e){
  e.preventDefault;
  // если вкладка не активна - ничего не делаем
  if ( ! $('.js-step-2').hasClass('active') ) {
    return;
  }

  var tab = $(this).data('tab');
  $('.step-tab-content').removeClass('active');
  $('#'+tab).addClass('active');

